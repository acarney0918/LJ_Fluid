# 1) Initialization
units lj
dimension 3
atom_style atomic
pair_style lj/cut 2.5
boundary p p p
atom_modify map array

# 2) System definition
region myreg block -30 30 -30 30 -30 30
create_box 2 myreg
create_atoms 1 random 550 341341 myreg
create_atoms 2 random 100 127569 myreg
 
group second type 2

# 3) Simulation settings
mass 1 1
mass 2 1
pair_coeff 1 1 1.0 1.0
pair_coeff 2 2 0.5 3.0
pair_coeff 1 2 1.0 1.5
pair_coeff 2 1 1.0 2.5
 
# 4) Visualization
thermo 10
 
# 5) Run
minimize 1.0e-4 1.0e-6 1000 10000
                            
# PART B - MOLECULAR DYNAMICS
 
# 4) Visualization
thermo 1000
variable kinetic_energy equal ke
variable potential_energy equal pe
variable pressure equal press
fix myat1 all ave/time 10 1 10 v_kinetic_energy v_potential_energy v_pressure file npt_energy.dat
dump mydmp all atom 1000 ljmsd_npt.dump.lammpstrj
 

compute msd_second second msd com yes
compute rdf all rdf 100 1 2
fix rdf_avg all ave/time 10 1 10 c_rdf[*] file rdf_output_and.dat mode vector
fix msd_avg second ave/time 10 1 10 c_msd_second file msd_and_avg.dat mode vector

# 5) Run
fix mynpt all npt temp 300.0 300.0 100.0 iso 0.0 0.0 0.5 drag 2.0

timestep 0.005
run 250000
